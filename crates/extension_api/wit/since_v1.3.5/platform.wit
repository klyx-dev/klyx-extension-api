interface platform {
    /// An operating system.
    enum os {
        /// macOS.
        mac,
        /// Linux.
        linux,
        /// Windows.
        windows,
        /// Android
        android,
        /// iOS
        ios,
    }

    /// A platform architecture.
    enum architecture {
        /// AArch64 (e.g., Apple Silicon, Android).
        aarch64,
        /// x86.
        x86,
        /// x86-64.
        x8664,
    }

    /// Gets the current operating system and architecture.
    current-platform: func() -> tuple<os, architecture>;
}
